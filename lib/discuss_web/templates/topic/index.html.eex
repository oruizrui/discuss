
<div class="container">
  <div class="row">
    <div class="col-6">
      <h2>Topics</h2>
    </div>
    <div class="col-6">
      <%= link to: Routes.topic_path(@conn, :new) do %>
        Add new Topic
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm">
        <ul class="list-group">
          <%= for topic <- @topics do %>
            <li class="list-group-item">
              <%= topic.title %>
              <div class="col-6">
                <%= link to: Routes.topic_path(@conn, :edit, topic.id) do %>
                  edit
                <% end %>
              </div>
              <div class="col-6">
                <%= link to: Routes.topic_path(@conn, :delete, topic.id), method: :delete do %>
                  delete
                <% end %>
              </div>
            </li>
          <% end %>
        </ul>
    </div>
  </div>
</div>
